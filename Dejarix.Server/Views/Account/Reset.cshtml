@{
    ViewData["Title"] = "Reset Password";
    var userId = ViewData["UserId"] as string;
    var token = ViewData["Token"] as string;
    var errors = ViewData["ResetErrors"] as string[];
    var success = ViewData["ResetSuccess"] as string;
}

<h1>Reset Password</h1>

@if (errors != null)
{
    @foreach (var error in errors)
    {
        <div class="alert alert-danger">@error</div>
    }
}

@if (success != null)
{
    <div class="alert alert-success">@success</div>
}

<form method="post" enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="reset-user-id" value="@userId" />
    <input type="hidden" name="reset-token" value="@token" />
    <div class="form-group">
        <input type="password" name="reset-password" placeholder="Password" />
    </div>
    <div class="form-group">
        <input type="password" name="reset-password-confirm" placeholder="Password (again)" />
    </div>
    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>
