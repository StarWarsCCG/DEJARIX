@{
    ViewData["Title"] = "Registration";
    var signInError = ViewData["SignInError"] as string;
}

<h1>Sign In</h1>
@if (signInError != null)
{
    <div class="alert alert-danger">@signInError</div>
}

<form method="post" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
        <input type="text" id="sign-in-user" name="sign-in-user" placeholder="Username or Email Address" />
    </div>
    <div class="form-group">
        <input type="password" id="sign-in-pass" name="sign-in-pass" placeholder="Password" />
    </div>
    <button type="submit" class="btn btn-primary">Sign In</button>
</form>
<p><a href="/Account/Forgot">Forgot your password?</a></p>
